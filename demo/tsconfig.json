{
    "compilerOptions": {
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable",
            "es2015.symbol",
            "es2015.symbol.wellknown"
        ],
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["client", "server", "common", "config"],
    "exclude": ["../node_modules"]
}
