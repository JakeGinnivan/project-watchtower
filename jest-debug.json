{
    "setupTestFrameworkScriptFile": "<rootDir>/lib/test/setup-tests.js",
    "testEnvironment": "node",
    "transform": {
        ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.(spec|test)\\.js$",
    "moduleFileExtensions": ["js", "json", "ts", "tsx"],
    "moduleDirectories": ["node_modules", "common"],
    "testPathIgnorePatterns": ["/node_modules/", "/demo/"],
    "moduleNameMapper": {
        "\\.(s?css|png|svg|jpg|eot|woff|woff2)$": "<rootDir>/lib/test/test-mapper.js"
    },
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "verbose": false,
    "collectCoverageFrom": [
        "**/*.{ts,tsx}",
        "!**/*.d.ts",
        "!**/node_modules/**",
        "!lib/config/**",
        "!demo/**",
        "!server/**",
        "!client/**",
        "!test/**"
    ],
    "coverageReporters": ["json", "lcov", "text", "teamcity"],
    "testResultsProcessor": "jest-teamcity-reporter"
}
